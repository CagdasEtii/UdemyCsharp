@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-bordered table-strip">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.ProductId)</th>
            <th>@Html.DisplayNameFor(m => m.ProductImage)</th>
            <th>@Html.DisplayNameFor(m => m.ProductName)</th>
            <th>@Html.DisplayNameFor(m => m.ProductPrice)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prd in Model)
        {
            <tr>
                <td>@prd.ProductId</td>
                <td><img src="@prd.ProductImage" alt="@prd.ProductName" width="100" height="100" /></td>
                <td>@prd.ProductName</td>
                <td>@prd.ProductPrice</td>
                <td>
                    <a href="" class="btn btn-sm btn-primary">Düzenle</a>
                    <a href="" class="btn btn-sm btn-danger">Sil</a>
                    @* <a href="@Url.Action("Details", "Product", new { id = prd.ProductId })" class="btn btn-sm btn-primary">Detay</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>