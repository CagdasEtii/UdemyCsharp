@model Course

<div class="card mt-3" id="course_@Model.Id">
    <div class="row">
        <div class="col-md-4">
            <img src="~/StaticFiles/img/@Model.Image" class="img-fluid rounded-start" alt="">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <a asp-controller="Course" asp-action="Detail" asp-route-id="@Model.Id">
                    <h5 class="card-title">
                        @Model.Title
                    </h5>
                </a>
                <p class="card-text">
                    @Model.Description
                </p>
            </div>
        </div>
    </div>
</div>