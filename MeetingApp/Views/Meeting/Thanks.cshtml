@model UserInfo

@section Style{
    <style>
        *{
            text-align: center !important;
        }
    </style>
}

@{
    ViewData["Title"] = "Başvuru Durumu";
}

<h1 class="h4">@ViewData["Title"]</h1>

@if(Model.WillAttend == true){
    <p>Teşekkürler @Model.Name, toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor...</p>
    <a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="List">Katılımcıları Listele</a>
} else {
    <p>@Model.Name, toplantıya katılmadığından dolayı üzgünüz.</p>
    <a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="Apply">Başvuru Formu</a>
}